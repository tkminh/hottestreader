<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    

    <RelativeLayout 
        android:id="@+id/mainTopLayoutIntro"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >

        <ImageView
            android:id="@+id/headerMainIntro"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:adjustViewBounds="true"
        	android:background="@drawable/header"
        	android:scaleType="fitXY"
            android:onClick="backToMainActivity"
             />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/mainBottomLayoutIntro"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        
		
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_below="@id/mainTopLayoutIntro"
        android:layout_above="@id/mainBottomLayoutIntro"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
		android:background="@drawable/bg_details"
		 >
        <ImageView 
	        android:id="@+id/mainleft"
	        android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
	       	android:src="@drawable/title_first_introduction"
	       	android:scaleType="centerCrop"
	       	android:adjustViewBounds="true"
        />
        
        <ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"

		>
        <LinearLayout 
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@drawable/mask"
	        android:padding="10dp"
	        android:layout_margin="10dp"
	        android:layout_marginRight="0dp"
	        >
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtWhatIs"
	        	android:textStyle="normal"
	        	android:textSize="15sp"
	        	android:layout_marginBottom="10dp"
	        	
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtWhatIs1"
	        	android:textColor="#fff"
	        	android:textStyle="normal"
	        	android:textSize="10sp"
	        	android:layout_marginBottom="10dp"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtWhatIs2"
	        	android:textColor="#fff"
	        	android:textStyle="normal"
	        	android:textSize="10sp"
	        	android:layout_marginBottom="10dp"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtHowOpen"
	        	android:textStyle="normal"
	        	android:textSize="15sp"
	        	android:layout_marginBottom="10dp"
	        	android:onClick="clickHowTo"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtHowOpen1"
	        	android:textColor="#fff"
	        	android:textStyle="normal"
	        	android:textSize="10sp"
	        	android:layout_marginBottom="10dp"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtConvert"
	        	android:textStyle="normal"
	        	android:textSize="15sp"
	        	android:layout_marginBottom="10dp"
	        	android:onClick="clickConvert"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtConvert1"
	        	android:textColor="#fff"
	        	android:textStyle="normal"
	        	android:textSize="10sp"
	        	android:layout_marginBottom="10dp"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtWhereDownload"
	        	android:textStyle="normal"
	        	android:textSize="15sp"
	        	android:layout_marginBottom="10dp"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtLink1"
	        	android:textColor="#fff"
	        	android:textStyle="normal"
	        	android:textSize="10sp"
	        	android:layout_marginBottom="10dp"
	        	android:onClick="clickManyBook"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtLink2"
	        	android:textColor="#fff"
	        	android:textStyle="normal"
	        	android:textSize="10sp"
	        	android:layout_marginBottom="10dp"
	        	android:onClick="clickSnee"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtLink3"
	        	android:textColor="#fff"
	        	android:textStyle="normal"
	        	android:textSize="10sp"
	        	android:layout_marginBottom="10dp"
	        	android:onClick="clickMobileRead"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtLink4"
	        	android:textColor="#fff"
	        	android:textStyle="normal"
	        	android:textSize="10sp"
	        	android:layout_marginBottom="10dp"
	        	android:onClick="clickFeedBook"
	            />
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtLink5"
	        	android:textColor="#fff"
	        	android:textStyle="normal"
	        	android:textSize="10sp"
	        	android:layout_marginBottom="10dp"
	        	android:onClick="clickVNBook"
	            />
		</LinearLayout>
		</ScrollView>
	</LinearLayout>
	
</RelativeLayout>
