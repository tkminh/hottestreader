<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    

    <RelativeLayout 
        android:id="@+id/mainTopLayoutIntro"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >

        <ImageView
            android:id="@+id/headerMainIntro"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@drawable/sub_header"
            android:scaleType="centerCrop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="backToMainActivity"
             />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/mainBottomLayoutIntro"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        
		<TableLayout 
		    android:id="@+id/tblMenuIntro"
		    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/footer"
	        android:layout_alignParentBottom="true">
		    <TableRow 
		        android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
		        >
		        <ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/f_mn_introduce"
			        android:layout_weight="0.25"
			        />
		        <ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/f_mn_setting"
			        android:layout_weight="0.25"
			        />
		        <ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/f_mn_theme"
			        android:layout_weight="0.25"
			        />
		        <ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/f_mn_bookstore"
			        android:layout_weight="0.25"
			        />
		    </TableRow>
		</TableLayout>
		<com.google.ads.AdView
	        android:id="@+id/adViewMainIntro"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@id/tblMenuIntro"
	        ads:adSize="BANNER"
	        ads:adUnitId="a1512d725538489"
	        ads:loadAdOnCreate="true" >
		    
		</com.google.ads.AdView>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_below="@id/mainTopLayoutIntro"
        android:layout_above="@id/mainBottomLayoutIntro"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
		android:background="@drawable/bg_details"
		 >
        <ImageView 
	        android:id="@+id/mainleft"
	        android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
	       	android:src="@drawable/title_first_introduction"
	       	android:scaleType="centerCrop"
	       	android:adjustViewBounds="true"
        />
        
        <LinearLayout 
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@drawable/mask"
	        android:padding="10dp"
	        android:layout_margin="10dp"
	        >
	        <TextView 
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:text="@string/txtWhatIs"
	        	android:textColor="#9fd4ff"
	        	android:textStyle="bold"
	        	android:textSize="15sp"
	            />
		</LinearLayout>
		
	</LinearLayout>
	
</RelativeLayout>
